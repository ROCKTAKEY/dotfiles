# -*- mode: snippet -*-
# name: define-go-package
# key: define-go-package
# --
(define-public $1
  (package
   (name "$1")
   (version "$2")
   (source
    (origin
     (method url-fetch)
     (uri
      (string-append
       "$3/archive/refs/tags/"
       "v" version ".tar.gz"))))
   (build-system go-build-system)))